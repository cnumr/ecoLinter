{
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "requireConfigFile": false
  },
  "plugins": ["self"],
  "rules": {
    "self/externalize-js-css": "error",
    "self/no-function-call-in-loop": "error",
    "self/no-post-increment-var": "error",
    "self/no-try-catch-finally": "error"
  }
}
